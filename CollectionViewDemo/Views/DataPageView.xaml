<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CollectionViewDemo.Views.DataPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dataTemplates="clr-namespace:CollectionViewDemo.Selectors"
    xmlns:viewModels="clr-namespace:CollectionViewDemo.ViewModels"
    Title="DataPageView"
    x:DataType="viewModels:DataPageViewModel">
    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
        <CollectionView ItemTemplate="{StaticResource ProductTemplates}" ItemsSource="{Binding Products}" />
    </RefreshView>

</ContentPage>