<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CollectionViewDemo.Views.LayoutsPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ModelViews="clr-namespace:CollectionViewDemo.ViewModels"
    xmlns:Models="clr-namespace:CollectionViewDemo.Models"
    Title="LayoutsPageView"
    x:DataType="ModelViews:DataPageViewModel">
    <CollectionView ItemsSource="{Binding Products}">
        <!--  ItemsLayout="HorizontalList"  -->
        <CollectionView.Header>
            <Border
                Padding="15"
                BackgroundColor="{StaticResource Primary}"
                StrokeShape="RoundRectangle 10">
                <Label
                    FontAttributes="Bold"
                    Text="Products"
                    TextColor="White" />
            </Border>
        </CollectionView.Header>
        <CollectionView.Footer>
            <HorizontalStackLayout>
                <Label FontSize="Title">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Power by:" TextColor="{StaticResource Tertiary}" />
                            <Span Text=".NET MAUI" TextColor="{StaticResource Primary}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
        </CollectionView.Footer>
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" />
            <!--<GridItemsLayout Orientation="Horizontal" Span="3" />-->
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="Models:Product">
                <Border
                    Margin="15"
                    Padding="15"
                    HeightRequest="250"
                    Stroke="{StaticResource Black}"
                    StrokeShape="RoundRectangle 10"
                    WidthRequest="200">
                    <VerticalStackLayout>
                        <Image Source="{Binding Image}" />
                        <Label HorizontalTextAlignment="Center" Text="{Binding Name}" />
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>