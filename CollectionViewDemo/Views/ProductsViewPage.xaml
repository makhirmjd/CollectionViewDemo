<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CollectionViewDemo.Views.ProductsViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:CollectionViewDemo.Models"
    xmlns:ViewModels="clr-namespace:CollectionViewDemo.ViewModels"
    Title="ProductsViewPage"
    x:DataType="ViewModels:ProductsViewPageModel">
    <Grid RowDefinitions=".1*,.9*">
        <Button Command="{Binding AddProductCommand}" Text="Manual Scrolling" />
        <CollectionView
            x:Name="CollectionViewHandle"
            Grid.Row="1"
            IsGrouped="True"
            ItemsSource="{Binding Products}"
            ItemsUpdatingScrollMode="KeepLastItemInView"
            Scrolled="CollectionView_Scrolled">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout
                    ItemSpacing="10"
                    Orientation="Vertical"
                    SnapPointsAlignment="Start"
                    SnapPointsType="Mandatory" />
            </CollectionView.ItemsLayout>
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate x:DataType="Models:ProductsGroup">
                    <Label
                        Padding="10"
                        BackgroundColor="LightGray"
                        FontAttributes="Bold"
                        FontSize="Large"
                        Text="{Binding Name}"
                        TextColor="Black" />
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.GroupFooterTemplate>
                <DataTemplate x:DataType="Models:ProductsGroup">
                    <Label
                        Margin="0,0,0,10"
                        Padding="10"
                        Text="{Binding Count, StringFormat='Total Products: {0:D}'}"
                        TextColor="MidnightBlue" />
                </DataTemplate>
            </CollectionView.GroupFooterTemplate>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Models:Product">
                    <Border
                        Padding="10"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 15">
                        <VerticalStackLayout>
                            <Label Text="{Binding Id}" />
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Price, StringFormat='{0:C}'}" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>