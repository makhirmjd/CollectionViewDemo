<?xml version="1.0" encoding="utf-8" ?>
<?xml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dataTemplates="clr-namespace:CollectionViewDemo.Selectors"
    xmlns:models="clr-namespace:CollectionViewDemo.Models"
    x:DataType="models:Product">
    <dataTemplates:ProductDataTemplateSelector x:Key="ProductTemplates" />
    <DataTemplate x:Key="ProductStyle" x:DataType="models:Product">
        <Grid
            Margin="15,10,15,0"
            ColumnDefinitions=".1*,.2*,.7*"
            RowDefinitions="*,*">
            <Border
                Grid.RowSpan="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Stroke="White"
                StrokeShape="RoundRectangle 10">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Offset="0" Color="#F8F9FA" />
                        <GradientStop Offset="1" Color="#DEE2E6" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Image
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                HeightRequest="100"
                Source="{Binding Image}" />
            <Label
                Grid.Column="2"
                FontSize="Large"
                Text="{Binding Name}"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="2"
                FontSize="Large"
                Text="{Binding Price, StringFormat='{0:C}'}"
                VerticalOptions="Center" />
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="OfferStyle" x:DataType="models:Product">
        <Grid
            Margin="15,10,15,0"
            ColumnDefinitions=".3*,.7*"
            RowDefinitions="*,*">
            <Border
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                Stroke="White"
                StrokeShape="RoundRectangle 10">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Offset="0" Color="#FFBF47" />
                        <GradientStop Offset="1" Color="#EEB54C" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Image
                Grid.RowSpan="2"
                HeightRequest="100"
                Source="{Binding Image}" />
            <Label
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="Title"
                Text="{Binding Name, StringFormat='OFFER: {0}'}"
                TextColor="White"
                VerticalOptions="Center" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="Title"
                TextColor="White"
                VerticalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding OfferPrice, StringFormat='{0:C}'}" />
                        <Span
                            Text="{Binding Price, StringFormat='{0:C}'}"
                            TextColor="DarkRed"
                            TextDecorations="Strikethrough" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>
    </DataTemplate>
</ResourceDictionary>